{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "declarationDir": "./types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/*/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist", "types"]
}
